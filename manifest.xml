<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="TaskPaneApp">

  <Id>claude-wps-ppt-plugin-001</Id>
  <Version>1.0.0</Version>
  <ProviderName>Claude AI</ProviderName>
  <DefaultLocale>zh-CN</DefaultLocale>
  <DisplayName DefaultValue="Claude for WPS PPT" />
  <Description DefaultValue="AI 驱动的演示文稿助手，通过自然语言创建和编辑幻灯片" />

  <Hosts>
    <Host Name="Presentation" />
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="http://localhost:5174/index.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Presentation">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title" />
            <Description resid="GetStarted.Description" />
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl" />
          </GetStarted>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label" />
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16" />
                  <bt:Image size="32" resid="Icon.32x32" />
                  <bt:Image size="80" resid="Icon.80x80" />
                </Icon>
                <Control xsi:type="Button" id="OpenTaskPane">
                  <Label resid="OpenTaskPane.Label" />
                  <Supertip>
                    <Title resid="OpenTaskPane.Label" />
                    <Description resid="OpenTaskPane.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          <ExtensionPoint xsi:type="TaskPane">
            <SourceLocation resid="Taskpane.Url" />
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="http://localhost:5174/assets/icon-16.png" />
        <bt:Image id="Icon.32x32" DefaultValue="http://localhost:5174/assets/icon-32.png" />
        <bt:Image id="Icon.80x80" DefaultValue="http://localhost:5174/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="http://localhost:5174" />
        <bt:Url id="Commands.Url" DefaultValue="http://localhost:5174/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="http://localhost:5174/index.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Claude for WPS PPT 已就绪" />
        <bt:String id="CommandsGroup.Label" DefaultValue="Claude AI" />
        <bt:String id="OpenTaskPane.Label" DefaultValue="打开 Claude" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="通过自然语言创建和编辑演示文稿" />
        <bt:String id="OpenTaskPane.Tooltip" DefaultValue="打开 Claude AI 助手，用自然语言创建精美幻灯片" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
